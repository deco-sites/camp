{
  "tasks": {
    "start": "deno run -A --watch=tailwind.config.js,static/ dev.ts",
    "component": "deno eval 'import \"$live/scripts/component.ts\"'",
    "partytown": "deno eval 'import \"$live/scripts/copyPartytownFiles.ts\"'",
    "format": "deno fmt --ignore=static/,README.md",
    "check": "deno fmt --ignore=static/,README.md --check"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
